{
  "version": "2.0.0",
  "windows": {
    "options": {
      "shell": {
        "executable": "pwsh.exe",
        "args": [
          "-NoProfile",
          "-ExecutionPolicy",
          "Bypass",
          "-Command"
        ]
      }
    }
  },
  "linux": {
    "options": {
      "shell": {
        "executable": "/usr/bin/pwsh",
        "args": [
          "-NoProfile",
          "-Command"
        ]
      }
    }
  },
  "osx": {
    "options": {
      "shell": {
        "executable": "/usr/local/bin/pwsh",
        "args": [
          "-NoProfile",
          "-Command"
        ]
      }
    }
  },
  "tasks": [
    {
      "label": "Test",
      "type": "shell",
      "command": "$ProgressPreference = 'SilentlyContinue'; Invoke-Pester -PesterOption @{IncludeVSCodeMarker=$true}",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [
        "$pester"
      ]
    }
  ]
}
